<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/BeigeBackground"
    tools:context=".MyPrimeraCalculator"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_last_operation"
        android:text="@string/last_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"/>
    <EditText
        android:id="@+id/edit_operation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la operaciÃ³n" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:stretchColumns="*"
        android:layout_marginBottom="100dp"
        android:baselineAligned="false"
        android:gravity="center_vertical">

        <TableRow>
            <Button android:text="8" android:id="@+id/btn_8"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false"
                android:focusable="false" />
            <Button android:text="9" android:id="@+id/btn_9"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
        </TableRow>

        <TableRow>
            <Button android:text="5" android:id="@+id/btn_5"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="6" android:id="@+id/btn_6"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="7" android:id="@+id/btn_7"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
        </TableRow>

        <TableRow>
            <Button android:text="2" android:id="@+id/btn_2"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="3" android:id="@+id/btn_3"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="4" android:id="@+id/btn_4"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
        </TableRow>

        <TableRow>
            <Button android:text="/" android:id="@+id/btn_div"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="0" android:id="@+id/btn_0"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="1" android:id="@+id/btn_1"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
        </TableRow>

        <TableRow>
            <Button android:text="+" android:id="@+id/btn_sum"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="-" android:id="@+id/btn_sub"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="*" android:id="@+id/btn_mult"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
        </TableRow>

        <TableRow>
            <Button android:text="AC" android:id="@+id/btn_ac"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="CE" android:id="@+id/btn_ce"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
            <Button android:text="=" android:id="@+id/btn_eq"
                android:background="@color/PielBackground"
                android:elegantTextHeight="false"
                android:singleLine="false" />
        </TableRow>

    </TableLayout>

</LinearLayout>
